@using Core.Models
@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>
<hr />
@if (Model.Count() != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Patient</th>
                <th>Doctor</th>
                <th>SelectedDay</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>
                        @appointment.Id
                    </td>
                    <td>
                        @appointment.AppointmentDateTime.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @appointment.Patient?.UserName
                    </td>
                    <td>
                        @appointment.Doctor?.DisplayName
                    </td>
                    <td>
                        @appointment.SelectedDay
                    </td>
                    <td>
                        @appointment.AppointmentTime
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found</p>
}