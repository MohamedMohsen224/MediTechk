@using Core.Models
@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a href="@Url.Action("Create", "Doctor")" class="btn btn-primary">Register Doctor</a>

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(u => u.Profile_Picture)</th>
                    <th>@Html.DisplayNameFor(u => u.DisplayName)</th>
                    <th>@Html.DisplayNameFor(u => u.Email)</th>
                    <th>@Html.DisplayNameFor(u => u.Address)</th>
                    <th>@Html.DisplayNameFor(u => u.Speachlization)</th>
                    <th>@Html.DisplayNameFor(u => u.DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(u => u.ClinicId)</th>





                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <img src="~/Files/Images/@user.Profile_Picture" class="img-fluid rounded" height="30" width="30" />
                        </td>
                        <td>@user.DisplayName</td>
                        <td>@user.Email</td>
                        <td>@user.Address</td>
                        <td>@user.Speachlization</td>
                        <td>@user.DateOfBirth</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.ClinicId</td>
                        


                        <td>
                            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                            <a class="btn btn-outline-danger" asp-action="Details" asp-route-id="@user.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>



        </table>

    </div>

}

else
{
    <div class="mt-3 p-3 alert-danger">
        <h2>theres no Records !! </h2>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}