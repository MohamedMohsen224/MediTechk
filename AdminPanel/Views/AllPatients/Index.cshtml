@using Core.Models
@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Index";
}

<h1>Patients</h1>
<hr/>
@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(u => u.UserName)</th>
                    <th>@Html.DisplayNameFor(u => u.Email)</th>
                    <th>@Html.DisplayNameFor(u => u.Address)</th>
                    <th>@Html.DisplayNameFor(u => u.DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(u => u.NationalID)</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Address</td>
                        <td>@user.DateOfBirth</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.NationalID</td>
                    </tr>
                }
            </tbody>



        </table>

    </div>

}

else
{
    <div class="mt-3 p-3 alert-danger">
        <h2>theres no Records !! </h2>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
