@model UserRoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr>
<hr>
<div>
    <form method="post" asp-action="Edit" class="mt-4" >
     <input asp-for="UserId" class="form-control" hidden />  
     <div class="input-group mb-2">
         <label asp-for="UserName" class="form-control"></label>
         <input asp-for="UserName" class="form-control"/>
         
     </div>
     <h3>Manage Roles</h3>
     <hr>
     <hr/>
     @for(int i = 0; i < Model.Roles.Count(); i++)
     {
            <div class="form-check">
                <input type="checkbox" asp-for="@Model.Roles[i].Name" class="form-check-input"/>
                <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.Roles[i]">@Model.Roles[i].Name</label>
            </div>
     }
     <br />
     <input type="submit" value="Edit User" class="btn btn-success" />
     <a class="btn-dark mt-2" asp-action="Index">Back to List</a>

     </form>
</div>
